---
import { Image } from "astro:assets";
import Java from "../assets/icons/Java.astro";
import Thymeleaf from "../assets/icons/Thymeleaf.astro";
import SpringBoot from "../assets/icons/SpringBoot.astro";
import Docker from "../assets/icons/Docker.astro";

import imgexp1 from "../../public/img-exp-1.png";
import Eye from "../assets/icons/Eye.astro";
---

<section class="p-5 flex flex-col gap-5">
    <h3
        class="text-xs sm:text-base lg:text-xl underline underline-offset-4 font-spaceGrotesk"
    >
        Experiencias recientes &rarr;
    </h3>
    <div class="gap-5 sm:grid grid-cols-2 lg:grid-cols-1">
        <section class="flex flex-col rounded-lg bg-per-tertiary lg:flex-row">
            <div
                class="group relative overflow-hidden rounded-t-lg lg:rounded-l-lg lg:w-[600px]"
            >
                <Image
                    src={imgexp1}
                    alt="Imagen del gestor de Inventario dentro de la empresa La Brujas Store"
                    class="transition-all duration-300 group-hover:blur-sm w-full"
                />
                <a
                    href="http://labrujastore.com.pe"
                    target="_blank"
                    class="absolute top-0 text-transparent w-full h-full flex justify-center items-center left-0 hover:text-white hover:bg-[#000000a0] transition ease"
                >
                    <Eye />
                </a>
            </div>

            <div
                class="font-spaceGrotesk p-2 lg:p-6 flex flex-col justify-between"
            >
                <div>
                    <h4 class="text-xs sm:text-base lg:text-xl">
                        La Brujas Store
                    </h4>
                    <a href="http://labrujastore.com.pe" target="_blank">
                        <h3 class="text-lg sm:text-2xl leading-[1.2]">
                            GESTOR DE INNVENTARIO
                        </h3>
                    </a>
                    <h6
                        class="text-[10px] sm:text-sm lg:text-lg font-light leading-[1.2]"
                    >
                        <em>Desarrollador Front-End</em>
                    </h6>
                    <p class="text-xs sm:text-base lg:text-xl my-2 font-light">
                        Proyecto realizado para la gestión de inventario de los
                        productos, realizado con el patrón de diseño
                        Modelo-Vista-Controlador.
                    </p>
                </div>

                <div>
                    <ul class="flex gap-2 mt-2">
                        <li class="group flex justify-center">
                            <a
                                href="http://labrujastore.com.pe"
                                class="peer bg-white p-[6px] rounded-md text-black w-12 flex justify-center animate-pulse group-hover:animate-wiggle"
                                target="_blank"
                            >
                                <Eye
                                    width="17px"
                                    height="17px"
                                    className="sm:w-7 sm:h-7"
                                />
                            </a>
                            <span
                                class="opacity-0 absolute top-[-42px] lg:top-[-48px] bg-[#171717] text-xs lg:text-base lg:w-[120px] text-center text-white p-2 w-[95px] rounded-md z-10 peer-hover:opacity-100 transition-all duration-300"
                                >Ver proyecto</span
                            >
                        </li>
                        <li class="bg-[#F44336] p-[6px] rounded-md">
                            <Java
                                width="17px"
                                height="17px"
                                className="sm:w-7 sm:h-7"
                            />
                        </li>
                        <li class="bg-[#6db33f] p-[6px] rounded-md">
                            <Thymeleaf
                                width="17px"
                                height="17px"
                                className="sm:w-7 sm:h-7"
                            />
                        </li>
                        <li class="bg-[#335e17] p-[6px] rounded-md">
                            <SpringBoot
                                width="17px"
                                height="17px"
                                className="sm:w-7 sm:h-7"
                            />
                        </li>
                        <li class="bg-[#0db7ed] p-[6px] rounded-md">
                            <Docker
                                width="17px"
                                height="17px"
                                className="sm:w-7 sm:h-7"
                            />
                        </li>
                    </ul>
                </div>
            </div>
        </section>
    </div>
</section>
