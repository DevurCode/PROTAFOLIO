    <div>
        <ul class="flex flex-wrap justify-center gap-3">
            <li class="bg-[#e34c26] p-2 rounded-md">
                <Html />
            </li>
            <li class="bg-[#2a4dcd] p-2 rounded-md">
                <Css />
            </li>
            <li class="bg-[#f0db4f] p-2 rounded-md">
                <Javascript />
            </li>
            <li class="bg-[#1d202d] p-2 rounded-md">
                <GitHub />
            </li>
            <li class="bg-[#f34f29] p-2 rounded-md">
                <Git />
            </li>
            <li class="bg-[#3490dc] p-2 rounded-md">
                <Tailwind />
            </li>
            <li class="bg-[#3490dc] p-2 rounded-md">
                <Netlify />
            </li>
            <li class="bg-[#007acc] p-2 rounded-md">
                <Typescript />
            </li>
            <li class="bg-[#0db7ed] p-2 rounded-md">
                <Docker />
            </li>
            <li class="bg-[#0078d7] p-2 rounded-md">
                <VisualStudio />
            </li>
            <li class="bg-astroGradient p-2 rounded-md">
                <AstroIcon />
            </li>
            <li class="bg-[#3c873a] p-2 rounded-md">
                <NodeJs />
            </li>
            <li class="bg-[#F44336] p-2 rounded-md">
                <Java />
            </li>
            <li class="bg-[#6db33f] p-2 rounded-md">
                <Thymeleaf />
            </li>
            <li class="bg-[#335e17] p-2 rounded-md">
